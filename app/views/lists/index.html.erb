<div class="pt-3">
  <table class="table table-bordered">
  <tbody>
   
      <% link_to 'New List', new_list_path, class:'btn btn-sm btn-dark btn-outline-dark', role:'button' %>
   
    <% @lists.each do |list| %>
      <tr class="<%= list.completed ? 'table-secondary' : '' %>">
        <td class="<%= list.completed ? 'marker' : ''=%>"><%= link_to list.description, edit_list_path(list) %></td>
        <td class="text-center">
          <% link_to 'Show', list %>
          <%link_to 'Edit', edit_list_path(list), class:'btn btn-sm btn-outline-info', role:'button' %>
          <%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-sm btn-outline-danger', role:'button' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

